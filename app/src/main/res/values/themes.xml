<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LoginAndRegistration" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Lost & Found App Theme Colors -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryVariant">@color/primary_purple_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/primary_purple_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <style name="Theme.LoginAndRegistration" parent="Base.Theme.LoginAndRegistration" />
    
    <!-- Splash Screen Theme for Android 11 and below (API < 31) -->
    <style name="Theme.App.Starting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>