<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    tools:context=".security.ui.dashboard.SecurityDashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main Title -->
        <TextView
            android:id="@+id/dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="SECURITY DASHBOARD"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Section 1: Summary & Trends -->
        <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUMMARY &amp; TRENDS"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Reports This Month -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REPORTS THIS MONTH"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                    <TextView
                        android:id="@+id/tv_reports_this_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/tv_avg_growth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg. 2.2% growth"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />
                </LinearLayout>

                <!-- Reports Over Time (Line Chart) -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_reports_over_time"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1.5" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: Reports Breakdown & Alerts -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:columnCount="2"
            android:rowCount="1">

            <!-- Reports Breakdown -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REPORTS BREAKDOWN"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart_by_type"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1" />

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/chart_by_reporter"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Alerts & Notifications -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALERTS &amp; NOTIFICATIONS"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Alert Item 1 -->
                        <TextView
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unresolved reports pending >7 days"
                            app:drawableStartCompat="@drawable/ic_warning"
                            app:drawableTint="?attr/colorError" />
                        <!-- Alert Item 2 -->
                        <TextView
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recently submitted reports"
                            app:drawableStartCompat="@drawable/ic_recents" />
                        <!-- Alert Item 3 -->
                        <TextView
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reports awaiting verification"
                            app:drawableStartCompat="@drawable/ic_pending" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </GridLayout>

        <!-- Section 3: Item Requests -->
        <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="ITEM REQUESTS"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/item_requests_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="8dp"
                tools:listitem="@layout/item_security_report" />

        </androidx.cardview.widget.CardView>

        <!-- Section 4: Recent Reports List -->
        <TextView
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="RECENT REPORTS"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- We will place the RecyclerView for recent reports here -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/security_reports_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="8dp"
                tools:listitem="@layout/item_security_report" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>


