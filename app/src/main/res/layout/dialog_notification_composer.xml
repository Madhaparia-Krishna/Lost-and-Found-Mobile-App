<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Dialog Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compose Notification"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Notification Title -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Notification Title"
            app:counterEnabled="true"
            app:counterMaxLength="50">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="50"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notification Body -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Notification Message"
            app:counterEnabled="true"
            app:counterMaxLength="200">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:minLines="3"
                android:maxLines="5"
                android:gravity="top" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notification Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Type"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgNotificationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbCustomAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Admin Message"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbSystemAnnouncement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="System Announcement" />

            <RadioButton
                android:id="@+id/rbSecurityAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security Alert" />

        </RadioGroup>

        <!-- Recipient Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send To"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgRecipientType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <RadioButton
                android:id="@+id/rbAllUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Users"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbRoleBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Role" />

            <RadioButton
                android:id="@+id/rbIndividual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Individual User" />

        </RadioGroup>

        <!-- Role Selection (shown when role-based is selected) -->
        <LinearLayout
            android:id="@+id/llRoleSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Role"
                android:textSize="12sp"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupRoles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Users"
                    android:checkable="true"
                    android:checked="true"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admins"
                    android:checkable="true"
                    style="@style/Widget.Material3.Chip.Filter" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSecurity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Security"
                    android:checkable="true"
                    style="@style/Widget.Material3.Chip.Filter" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <!-- Individual User Email (shown when individual is selected) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="User Email"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action URL (Optional) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilActionUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Action URL (Optional)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etActionUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Schedule Option -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule for later"
            android:layout_marginBottom="8dp" />

        <!-- Schedule Date/Time (shown when schedule is checked) -->
        <LinearLayout
            android:id="@+id/llScheduleDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Select Date"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Time"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Selected Date/Time Display -->
        <TextView
            android:id="@+id/tvScheduledDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <!-- Preview Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preview Notification"
            android:layout_marginBottom="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
