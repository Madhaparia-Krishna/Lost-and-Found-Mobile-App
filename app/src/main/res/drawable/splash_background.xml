<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#9B8FE8"
                android:centerColor="#8B7ED8"
                android:endColor="#7B6FD8"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Centered app logo -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@drawable/splash_logo"/>
    </item>
</layer-list>
